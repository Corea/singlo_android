<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <include layout="@layout/teacher_top_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비활성화 멘트"
            android:textColor="#393939"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/AbsenceEditText"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lessonquestion_back"
            android:ems="10"
            android:gravity="top"
            android:hint="개인 사정으로 레슨하지 못할 경우 메시지를 남깁니다."
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress|textEmailSubject"
            android:textColorHint="#ff31aa39"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/SaveImageButton"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/absense_save_btn" />
    </LinearLayout>

</LinearLayout>