<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/singlo_background</item>
        <item name="android:windowNoTitle">true</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SingloRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/singlo_ratingbar_full</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="SingloSmallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/singlo_ratingbar_small_full</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="CauseButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/noselect_back</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>